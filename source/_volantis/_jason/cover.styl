// 本文件用于覆盖已有样式
:root
  --toolbarFont: '#333';

// 头部
.l_header
  &.pei-header ul.nav-list-h > li
    color: var(--toolbarFont)
    a
      font-weight: 400
// 代码块
code.hljs {
  font-size: 1.3em;
}
// 文章详情
#l_main .article 
  &.article-type-page, &.article-type-docs, &.article-type-friends
    background-color: rgba(255, 255, 255, 1);
    background-image: url('/images/memphis-colorful.webp')

article
  .post
    & > h1,h2,h3
      font-weight: 700
      background: linear-gradient(to bottom,transparent 60%,rgba(189,202,219,.3) 0) no-repeat
      display: initial
      width: auto
      border-bottom: none
    & > h3
      font-weight: 500
      position: initial
      