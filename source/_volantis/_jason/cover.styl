// 本文件用于覆盖已有样式
:root
  --toolbarFont: '#333';
  
$sidebar = 320px
// 头部
.l_header
  &.pei-header ul.nav-list-h > li
    color: var(--toolbarFont)
    a
      font-weight: 400
// 代码块
.article code
  background-color: #f9f2f4;
  font-family: ZhuZiAWan;
[color-scheme="dark"]
  .article code
    background-color: #333;
code.hljs {
  font-size: 1.2em;
}
// 文章详情
#l_main .article
  &.article-type-page, &.article-type-docs, &.article-type-friends
    background-image: url('/images/memphis-colorful.webp')

[color-scheme="dark"]
#l_main .article
    &.article-type-page, &.article-type-docs, &.article-type-friends
      background-image: none;

article#post
    & > h1,h2,h3
      font-weight: 700
      background: linear-gradient(to bottom,transparent 60%,rgba(189,202,219,.3) 0) no-repeat
      display: initial
      width: auto
      border-bottom: none
    & > h3
      font-weight: 500
      position: initial
// 侧边栏
#l_side
  .widget
    position: relative;
    overflow: visible;
    z-index: auto;
    // background: rgba(250, 250, 250, 98%);
    &:before
      content: '';
      position: absolute;
      top: 0px;
      left: 0px;
      right: 0px;
      bottom: 0px;
      border-radius: 8px;
      transform: skew(1deg, 1deg);
      z-index: -1;
      background: rgb(0,165,245) linear-gradient(45deg, rgba(0,239,245,1) 20%, rgba(0,165,245,1) 50%, rgba(245,222,0,1) 80%);
